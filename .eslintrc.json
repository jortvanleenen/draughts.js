{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "eslint:recommended",
  "plugins": [
    "snakecasejs"
  ],
  "settings": {
    "snakecasejs/filter": [
      "ClassDeclaration",
      "NewExpression",
      "FunctionDeclaration",
      "CallExpression",
      "Property",
      "MemberExpression",
      "MethodDefinition",
      "ExportSpecifier",
      "ImportSpecifier"
    ]
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-var": "error",
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "no-duplicate-imports": "error",
    "no-self-compare": "warn",
    "no-unreachable-loop": "error",
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "snakecasejs/snakecasejs": "error",
    "capitalized-comments": [
      "error",
      "always",
      {
        "ignoreConsecutiveComments": true
      }
    ]
  }
}
